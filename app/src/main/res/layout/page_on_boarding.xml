<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/pink">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/OnviewPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/Btngo"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/OnTabLT"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tabBackground="@drawable/background_tab"
        app:tabIndicatorHeight="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@id/OnviewPage"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Btngo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="@drawable/background_btn"
        android:elevation="10dp"
        android:letterSpacing="00.2"
        android:text="@string/next"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:layout_margin="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>